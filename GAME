def get_user_choice():
    # Get the user's choice
    user_choice = input("Enter your choice (stone, paper, scissors): ").lower()
    while user_choice not in ['stone', 'paper', 'scissors']:
        print("Invalid choice. Please choose again.")
        user_choice = input("Enter your choice (stone, paper, scissors): ").lower()
    return user_choice

def get_computer_choice():
    # Randomly select the computer's choice
    return random.choice(['stone', 'paper', 'scissors'])

def determine_winner(user, computer):
    # Determine the winner of the game
    if user == computer:
        return "It's a tie!"import random

    elif (user == 'stone' and computer == 'scissors') or \
         (user == 'scissors' and computer == 'paper') or \
         (user == 'paper' and computer == 'stone'):
        return "You win!"
    else:
        return "Computer wins!"

def play_game():
    print("Welcome to Stone, Paper, Scissors!")
    user_choice = get_user_choice()
    computer_choice = get_computer_choice()
    print(f"Computer chose: {computer_choice}")
    result = determine_winner(user_choice, computer_choice)
    print(result)

if __name__ == "__main__":
    play_game()
